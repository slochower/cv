	month = dec,
	year = {2010},
	pages = {966--977},
	file = {Moravcevic et al (2010) Kinase Associated-1 Domains Drive MARK-PAR1 Kinases to Membrane Targets by Binding Acidic Phospholipids.pdf:/Users/dslochower/Zotero/storage/8QG8BDTZ/Moravcevic et al (2010) Kinase Associated-1 Domains Drive MARK-PAR1 Kinases to Membrane Targets by Binding Acidic Phospholipids.pdf:application/pdf;ScienceDirect Snapshot:/Users/dslochower/Zotero/storage/ZH5K8XHT/S0092867410013085.html:text/html}
