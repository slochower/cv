	pages = {8322--8329},
	file = {Slochower et al (2013) Quantum and All-Atom Molecular Dynamics Simulations of Protonation and Divalent Ion Binding to Phosphatidylinositol.pdf:/Users/dslochower/Zotero/storage/VSQ7Y7U2/Slochower et al (2013) Quantum and All-Atom Molecular Dynamics Simulations of Protonation and Divalent Ion Binding to Phosphatidylinositol.pdf:application/pdf}
